extends ./../layouts/plain.jade
block content-body
  body.hold-transition.lockscreen
    .lockscreen-wrapper
      .lockscreen-logo
        a(href='/')
          b Admin
          | LTE
      // User name
      .lockscreen-name John Doe
      // START LOCK SCREEN ITEM
      .lockscreen-item
        // lockscreen image
        .lockscreen-image
          img(src='./img/user1-128x128.jpg', alt='User Image')
        // /.lockscreen-image
        // lockscreen credentials (contains the form)
        form.lockscreen-credentials
          .input-group
            input.form-control(type='password', placeholder='password')
            .input-group-btn
              button.btn
                i.fa.fa-arrow-right.text-muted
        // /.lockscreen credentials
      // /.lockscreen-item
      .help-block.text-center
        | Enter your password to retrieve your session
      .text-center
        a(href='/login') Or sign in as a different user
      .lockscreen-footer.text-center
        | Copyright Â© 2015-2016 
        b
          a.text-black(href='http://botsolve.com') BotSolve Inc.
        br
        |         All rights reserved
    // jQuery 2.1.4
    script(src='/plugins/jQuery/jQuery-2.1.4.min.js')
    // Bootstrap 3.3.5
    script(src='/js/bootstrap.min.js')
