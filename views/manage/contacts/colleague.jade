.box.box-solid
  .box-body
    table.example.table.table-hover
      thead
        tr
          th(style='width: 20px') ID
          th Joined On
          th Name
          th Contact
          th Email Id
          th Birth Date
          th(style='width: 60px') More Info 
      tbody
        each colleague in colleagues
          tr
            td
              img.pic.direct-chat-img.margin-r-5(src='#{colleague.aimg}', alt='User Image')
            td(style='vertical-align:middle')= colleague.joined
            td(style='vertical-align:middle')= colleague.fname+' '+colleague.lname
            td(style='vertical-align:middle')= colleague.phoneno
            td(style='vertical-align:middle')= colleague.email
            td(style='vertical-align:middle') delete me
            td(style='vertical-align:middle; text-align:center')
              button(onclick="window.location.href='#'").btn.btn-default.btn-sm
                i.fa.fa-folder-open
                |  View
  // /.box-body
